    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "python": "${command:python.interpreterPath}",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload"
            ],
            "jinja": true
        }
    ]
}