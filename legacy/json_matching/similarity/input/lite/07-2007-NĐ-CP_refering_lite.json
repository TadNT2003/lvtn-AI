                  "aggregation_ner": [],
                  "embedding": "",
                  "reference": [],
                  "classification": ""
                },
                {
                  "name": "diemb",
                  "value": "b) Bà mẹ Việt Nam anh hùng;",
                  "content": [],
                  "tag": "",
                  "internal_ner": [],
                  "parent_ner": [],
                  "aggregation_ner": [],
                  "embedding": "",
                  "reference": [],
                  "classification": ""
                },
                {
                  "name": "diemc",
                  "value": "c) Anh hùng Lực lượng vũ trang nhân dân, Anh hùng Lao động;",
                  "content": [],
